<%= form_tag sessions_url, method: :post do %>

  <div class="field">
    <%= label_tag :name %><br>
    <%= text_field_tag :name %>
  </div>
  <div class="field">
    <%= label_tag :email %><br>
    <%= text_field_tag :email %>
  </div>
  <div class="actions">
    <%= submit_tag "Sign in" %>
  </div>

<% end %>
